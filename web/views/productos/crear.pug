doctype html
html
    head
        title Crear Producto
        link(rel="stylesheet" href="/css/CRUDstyles.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet", href="/css/bootstrap.css")
        
    body
        a.btn-regresar(href='/admin/productos') Regresar
        h1.text-center Crear Nuevo Producto
        .d-flex.justify-content-center.align-items-center.vh-100
            form(action="/admin/productos/crear" method="POST" style="width:24rem;")
                div.mb-3
                    label.form-label(for="nombre") Nombre:
                    input.form-control.mx-auto(name="nombre" id="nombre" required style="width:75%;")
                div.mb-3
                    label.form-label(for="costo") Costo:
                    input.form-control.mx-auto(type="number" name="costo" id="costo" required style="width:75%;")
                div.mb-3
                    label.form-label(for="precio") Precio:
                    input.form-control.mx-auto(type="number" name="precio" id="precio" required style="width:75%;")
                div.mb-3
                    label.form-label(for="id_categoria") Categoria:
                    input.form-control.mx-auto(type="number" name="id_categoria" id="id_categoria" required style="width:75%;")
                div.mb-3
                    label.form-label(for="id_plataforma") Plataforma:
                    input.form-control.mx-auto(type="number" name="id_plataforma" id="id_plataforma" required style="width:75%;")
                div.mb-3
                    label.form-label(for="descripcion") Descripci√≥n:
                    textarea.form-control(name="descripcion" id="descripcion")
                div.mb-3
                    label.form-label(for="stock") Stock:
                    input.form-control.mx-auto(type="number" name="stock" id="stock" required style="width:75%;")
                div.d-flex.justify-content-between
                    button.btn.btn-primary(type="submit") Crear Producto
                    a.btn.btn-secondary.me-5(href="/admin/") Cancelar
