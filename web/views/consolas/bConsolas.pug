doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title CONSOLAS
    link(rel="stylesheet", href="/css/bootstrap.css")
    link(rel="stylesheet", href="/css/style.css")
    script(src="/js/bootstrap.bundle.js")
    script(src="/js/pooper.min.js")
    body
      //- Renderiza un header diferente basado en la variable `userLoggedIn`
      if userLoggedIn
        include ../layout/headerUsuario.pug
      else
        include ../layout/header.pug

    .container
      //- Sección PlayStation
      .row(style='gap: 2rem; padding: 20px;')
        h1 PlayStation
        if playstation.length
          each con in playstation
            .col
              .card(style='width: 16rem; height: 24rem;')
                img.card-img-top(src=`/img/caratulas/${con.id_producto}.jpg` alt='...' style='width: 12rem; height: 12rem;')
                .card-body
                  h5.card-title=`${con.nombre}`
                  p.card-text=`${con.precio.toFixed(2)}`
                  if userLoggedIn
                    form(method="POST" action="/user/agregarCarrito")
                      input(type="hidden" name="_csrf" value=csrf)
                      input(type="hidden" name="id" value=`${con.id_producto}`)
                      input(type="hidden" name="nombre" value=`${con.nombre}`)
                      input(type="hidden" name="precio" value=`${con.precio}`)
                      input(type="hidden" name="img" value=`/img/caratulas/${con.id_producto}.jpg`)
                      button.btn.btn-primary(type="submit") Añadir al carrito
                  else
                    a.btn.btn-secondary(href='/logIn') Inicia sesión para comprar         
        else
          p.text-muted No hay productos disponibles.

